{
  "root": true,
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "env": {
    "browser": true,
    "greasemonkey": true,
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "globals": {
    "GM_notification": false,
    "GM_unregisterMenuCommand": false
  },
  "rules": {
    "curly": ["error", "all"],
    "linebreak-style": ["error", "unix"],
    "no-console": "off"
  }
}
